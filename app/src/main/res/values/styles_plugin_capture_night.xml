<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="OcSwitch_dark">
        <item name="ocTrack">@drawable/switch_track_holo_dark</item>
        <item name="ocThumb">@drawable/switch_inner_holo_dark</item>
        <item name="ocTextOn">@string/textOn</item>
        <item name="ocTextOff">@string/textOff</item>
        <item name="ocThumbTextPadding">3dip</item>
        <item name="ocSwitchMinWidth">48dip</item>
        <item name="ocSwitchMinHeight">24dip</item>
        <item name="ocSwitchPadding">4dip</item>
        <item name="ocSwitchTextAppearance">@style/OcTextAppearance</item>
    </style>
    
    <style name="OcSwitch_light">
        <item name="ocTrack">@drawable/switch_track_holo_light</item>
        <item name="ocThumb">@drawable/switch_inner_holo_light</item>
        <item name="ocTextOn">@string/textOn</item>
        <item name="ocTextOff">@string/textOff</item>
        <item name="ocThumbTextPadding">3dip</item>
        <item name="ocSwitchMinWidth">48dip</item>
        <item name="ocSwitchMinHeight">24dip</item>
        <item name="ocSwitchPadding">4dip</item>
        <item name="ocSwitchTextAppearance">@style/OcTextAppearance</item>
    </style>    	
   
    <style name="OcTextAppearance">
        <item name="ocTextColor">?android:attr/textColorPrimary</item>
        <item name="ocTextColorHighlight">?android:attr/textColorHighlight</item>
        <item name="ocTextColorHint">?android:attr/textColorHint</item>
        <item name="ocTextColorLink">?android:attr/textColorLink</item>
        <item name="ocTextSize">@dimen/nightmodeswitcher_textsize</item>
    </style>   
</resources>